NAME = libftprintf.a
SRCS_PATH = srcs

LIBFT = libft
LIBFT_DIR = libft

CC = gcc
CFLAGS = -Wall -Werror -Wextra


FUNCTIONS =	ft_printf \
 			check_ptr \
			int_print \
			char_print \
			str_print \
			uint_print \
			oct_print \
			hex_print

INCLUDE_DIRS = $(SRCS_PATH) $(LIBFT_DIR)

SOURCES = $(foreach function, $(FUNCTIONS), $(SRCS_PATH)/$(function).c)

OBJECTS = $(foreach function, $(FUNCTIONS), $(OBJ_DIR)/$(function).o)

OBJ_DIR = $(SRCS_PATH)/objects

INC = includes/ libft/

all: $(NAME)

$(LIBFT):
	@echo "Compiling(libft)..."
	@make -C libft
	@echo "libft complete."

$(NAME): $(OBJECTS)
	@echo "Compiling(libftprintf)..."
#	@$(CC) $(CFLAGS) -c $(SRCS) $(INC)

$(OBJECTS): $(SOURCES) | directories
	@$(CC) $(CFLAGS) -c $(patsubst %.o, $(SRCS_PATH/)%.c, $(notdir $@)) -o $@ \
		$(foreach i, $(INC), -I$(i))

directories:
	@mkdir -p $(OBJ_DIR)

	@ar rc $(NAME) $(OBJECTS)
	@echo "$(NAME) created"
	@ranlib $(NAME)
	@echo "$(NAME) indexed"
# $(CC) $(CFLAGS) $^ -o $@ \  
# @$(CC) $(CFLAGS) -c $(SRCS) $(INC)
	@echo "libftprintf complete."






#after this line is just for testing, erase later	
	@echo "Compiling main.c..."
	@gcc main.c libftprintf.a libft/libft.a -g
	@echo '\n'a.out ready to \(run\)fire!

clean:
	@echo "Cleaning object files..."
	@rm -f $(OBJECTS)
	@make -C libft clean

fclean: clean
	@echo "Cleaning binary..."
	@make -C libft fclean
	@rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re
